<div class="title">
  <h1>Restaurants</h1>
</div>
<div id="restaurants" class="container p-4">

  <% @restaurants.each do |restaurant| %>
    <%= render "restaurant", restaurant:restaurant%>
    <p>
      <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
    </p>
  <% end %>
</div>

<div>
   <p>
      <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary"%>
    </p>

</div>
